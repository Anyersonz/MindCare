<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientacion="vertical">

    <ImageView
        android:src="@drawable/activity_exercise"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/breathing_exercise_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breathing Exercises" />

        <Button
            android:id="@+id/mindfulness_exercise_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mindfulness Exercises" />
    </LinearLayout>


</FrameLayout>